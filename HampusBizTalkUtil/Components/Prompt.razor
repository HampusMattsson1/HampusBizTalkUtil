<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
            </div>
            <div class="modal-body">
                <p>@Body</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="() => Close(true)">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Close(false)">No</button>
            </div>
        </div>
    </div>
</div>

@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {

    string Title = "";
    string Body = "";

    public Guid Guid = Guid.NewGuid();
    public string ModalDisplay = "none;";
    public string ModalClass = "";
    public bool ShowBackdrop = false;

    private TaskCompletionSource<bool> tcs;

    public Task<bool> Show(string title, string body)
    {
        Title = title;
        Body = body;

        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();

        tcs = new TaskCompletionSource<bool>();
        return tcs.Task;
    }

    public void Close(bool result)
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
        tcs.SetResult(result);
    }
}